<?xml version="1.0" encoding="UTF-8" ?>

<Configuration status="warn" name="MyApp" xmlns="http://logging.apache.org/log4j/">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd/MM/yyy HH:mm:ss} %p %c %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="ALL">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>